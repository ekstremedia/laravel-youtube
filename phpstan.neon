includes:
    - vendor/phpstan/phpstan/conf/bleedingEdge.neon

parameters:
    level: 5
    paths:
        - src
    tmpDir: build/phpstan
    ignoreErrors:
        # Ignore Eloquent magic methods
        - '#Call to an undefined static method .*::(where|find|create|update|delete|first|get|paginate|findOrFail)\(\)#'
        - '#Access to an undefined property .*::\$[a-zA-Z_]+#'
        - '#Call to static method .* on an unknown class DB\.#'
        # Allow new static() pattern
        - '#Unsafe usage of new static\(\)#'
        # Google MediaFileUpload accepts null for data parameter
        - '#Parameter \#4 \$data of class Google\\Http\\MediaFileUpload constructor expects string, null given#'
        # Eloquent scope return types
        - '#should return Illuminate\\Database\\Eloquent\\Builder but returns Illuminate\\Database\\Query\\Builder#'